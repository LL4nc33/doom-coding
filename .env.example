# Doom Coding Environment Configuration
# Copy to .env and fill in your values

# ===========================================
# REQUIRED SETTINGS
# ===========================================

# Tailscale Authentication
# Get your auth key from: https://login.tailscale.com/admin/settings/keys
TS_AUTHKEY=tskey-auth-XXXXXXXXXXXXXXXX

# code-server Password
# Set a strong password for web access
CODE_SERVER_PASSWORD=your-secure-password-here

# Sudo Password for code-server container
SUDO_PASSWORD=your-sudo-password-here

# ===========================================
# USER SETTINGS
# ===========================================

# User and Group IDs (match your host user)
# Find with: id -u && id -g
PUID=1000
PGID=1000

# Timezone
TZ=Europe/Berlin

# ===========================================
# PATHS
# ===========================================

# Workspace directory (absolute path or relative to docker-compose.yml)
WORKSPACE_PATH=./workspace

# ===========================================
# TAILSCALE OPTIONS
# ===========================================

# Accept DNS from Tailscale (set to false if DNS issues occur)
TS_ACCEPT_DNS=false

# Additional Tailscale arguments
TS_EXTRA_ARGS=--advertise-tags=tag:doom-coding

# ===========================================
# ARCHITECTURE (auto-detected, override if needed)
# ===========================================

# TARGETARCH=amd64
# TARGETARCH=arm64

# ===========================================
# ADVANCED OPTIONS
# ===========================================

# Enable Claude Code automation mode (skips permission prompts)
# CLAUDE_AUTOMATION=--dangerously-skip-permissions

# Custom code-server port (default: 8443)
# CODE_SERVER_PORT=8443
